@using System.Globalization
@{
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var isEs = lang == "es";

    var homeText = isEs ? "Inicio" : "Home";
    var privacyText = isEs ? "Privacidad" : "Privacy";
    var maintenanceText = isEs ? "Mantenimientos" : "Maintenance";
    var techniciansText = isEs ? "Técnicos" : "Technicians";
    var categoriesText = isEs ? "Categorías" : "Categories";
    var ticketsText = isEs ? "Tickets" : "Tickets";
    var slaText = isEs ? "SLA" : "SLA";
    var welcomeText = isEs ? "Bienvenido" : "Welcome";
    var myProfileText = isEs ? "Mi Perfil" : "My Profile";
    var logoutText = isEs ? "Cerrar Sesión" : "Logout";
    var loginText = isEs ? "Iniciar Sesión" : "Login";
    var registerText = isEs ? "Registrarse" : "Register";
}

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-secondary bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HelpTrack</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@homeText</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@privacyText</a>
                </li>
              
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-wrench"></i> @maintenanceText
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Tecnico" asp-action="Index">@techniciansText</a></li>
                            <li><a class="dropdown-item" asp-controller="Categoria" asp-action="Index">@categoriesText</a></li>
                            <li><a class="dropdown-item" asp-controller="Ticket" asp-action="Index">@ticketsText</a></li>
                            <li><a class="dropdown-item" asp-controller="Sla" asp-action="Index">@slaText</a></li>
                            @if (User.IsInRole("Administrador"))
                            {
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Index"><i class="fas fa-users"></i> @(isEs ? "Usuarios" : "Users")</a></li>
                            }
                        </ul>
                    </li>
                }
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    @await Html.PartialAsync("_CulturePartial")
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle"></i> @welcomeText, @User.Identity.Name
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="fas fa-user"></i> @myProfileText</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> @logoutText</a></li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">@loginText</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">@registerText</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
