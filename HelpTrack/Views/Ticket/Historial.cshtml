@model IEnumerable<HelpTrack.Application.DTOs.AsignacionTicketDTO>
@{
    ViewData["Title"] = "Historial de Asignaciones";
    var ticketId = ViewBag.TicketId;
    var ticketTitle = ViewBag.TicketTitle ?? "Ticket";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]: @ticketTitle</h2>
        <a asp-controller="Ticket" asp-action="Details" asp-route-id="@ticketId" class="btn btn-secondary">Volver al Ticket</a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No hay historial de asignaciones para este ticket.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha de Asignación</th>
                        <th>Técnico</th>
                        <th>Método</th>
                        <th>Prioridad</th>
                        <th>Justificación</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FechaAsignacion.ToString("g")</td>
                            <td>@(item.Tecnico?.Alias ?? "N/A")</td>
                            <td>@item.Metodo</td>
                            <td>
                                @switch (item.Prioridad)
                                {
                                    case 1:
                                        <span class="badge bg-secondary">Baja</span>
                                        break;
                                    case 2:

                                        <span class="badge bg-info">Media</span>
                                        break;
                                    case 3:

                                        <span class="badge bg-primary">Normal</span>
                                        break;
                                    case 4:

                                        <span class="badge bg-warning">Alta</span>
                                        break;
                                    case 5:

                                        <span class="badge bg-danger">Crítica</span>
                                        break;
                                    default:

                                        <span class="badge bg-secondary">@item.Prioridad</span>
                                        break;
                                }
                            </td>
                            <td>@item.Justificacion</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>