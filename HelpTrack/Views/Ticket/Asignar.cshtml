@model HelpTrack.Application.DTOs.AsignacionTicketDTO
@{
    ViewData["Title"] = "Asignar Ticket";
    var ticketTitle = ViewBag.TicketTitle ?? "Ticket";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]: @ticketTitle</h2>
    <hr />

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Asignar" method="post">
                <input type="hidden" asp-for="IdTicket" />

                <div class="form-group mb-3">
                    <label asp-for="IdTecnico" class="control-label">Técnico</label>
                    <select asp-for="IdTecnico" class="form-control" asp-items="Model.TecnicosDisponibles">
                        <option value="">-- Seleccione un técnico --</option>
                    </select>
                    <span asp-validation-for="IdTecnico" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Prioridad" class="control-label">Prioridad</label>
                    <select asp-for="Prioridad" class="form-control">
                        <option value="1">Baja</option>
                        <option value="2">Media</option>
                        <option value="3" selected>Normal</option>
                        <option value="4">Alta</option>
                        <option value="5">Crítica</option>
                    </select>
                    <span asp-validation-for="Prioridad" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Justificacion" class="control-label">Justificación</label>
                    <textarea asp-for="Justificacion" class="form-control" rows="4" placeholder="Explique por qué está asignando este ticket al técnico seleccionado"></textarea>
                    <span asp-validation-for="Justificacion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Asignar</button>
                    <a asp-controller="Ticket" asp-action="Details" asp-route-id="@Model.IdTicket" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Información del Ticket</h5>
                </div>
                <div class="card-body">
                    <p><strong>Título:</strong> @ticketTitle</p>
                    <p><strong>Categoría:</strong> @ViewBag.CategoriaNombre</p>
                    <p><strong>Prioridad Actual:</strong> @ViewBag.PrioridadNombre</p>
                    <p><strong>Estado Actual:</strong> @ViewBag.EstadoNombre</p>
                    <p><strong>Fecha de Creación:</strong> @ViewBag.FechaCreacion</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}