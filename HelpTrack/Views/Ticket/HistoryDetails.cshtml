@using System.Globalization
@using HelpTrack.Application.DTOs
@model HelpTrack.Web.ViewModels.TicketHistoryDetailsViewModel

@{
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var isEs = lang == "es";

    // Títulos y encabezados
    var title = isEs ? "Detalles del Historial del Ticket" : "Ticket History Details";
    var ticketDetailsText = isEs ? "Detalles del Ticket" : "Ticket Details";
    var idTicketText = isEs ? "ID Ticket" : "Ticket ID";
    var titleText = isEs ? "Título" : "Title";
    var creationDateText = isEs ? "Fecha de Creación" : "Creation Date";
    var assignmentDateText = isEs ? "Fecha de Asignación" : "Assignment Date";
    var technicianNameText = isEs ? "Técnico Asignado" : "Assigned Technician";
    var currentStatusText = isEs ? "Estado Actual" : "Current Status";
    var unassignedText = isEs ? "Sin Asignar" : "Unassigned";
    var actionsText = isEs ? "Acciones" : "Actions";
    var viewDetailsText = isEs ? "Ver Detalles" : "View Details";
    var backToListText = isEs ? "Volver al Listado" : "Back to List";
    var changeHistoryText = isEs ? "Historial de Cambios" : "Change History";
    var userActionText = isEs ? "Usuario" : "User Action";
    var eventDateText = isEs ? "Fecha del Evento" : "Event Date";
    var statusText = isEs ? "Estado" : "Status";
    var observationText = isEs ? "Observación" : "Observation";
    var noHistoryRecordsText = isEs ? "No hay registros de historial disponibles" : "No history records available";
    var noDataText = isEs ? "Sin datos" : "No data";

    ViewData["Title"] = title;
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-history"></i> @title
        </h1>
    </div>

    <div class="row">
        <!-- Información del Ticket Card -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">@ticketDetailsText</h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong><i class="fas fa-id-badge text-primary"></i> @idTicketText:</strong>
                        </div>
                        <div class="col-md-8">
                            <span class="badge bg-secondary">#@Model.TicketInfo.IdTicket</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong><i class="fas fa-heading text-primary"></i> @titleText:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.TicketInfo.Titulo
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong><i class="fas fa-calendar-plus text-primary"></i> @creationDateText:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.TicketInfo.FechaCreacion.ToString("g")
                        </div>
                    </div>

                    @if (Model.TicketInfo.FechaAsignacion.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <strong><i class="fas fa-user-check text-primary"></i> @assignmentDateText:</strong>
                            </div>
                            <div class="col-md-8">
                                @Model.TicketInfo.FechaAsignacion.Value.ToString("g")
                            </div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong><i class="fas fa-user-tie text-primary"></i> @technicianNameText:</strong>
                        </div>
                        <div class="col-md-8">
                            @if (!string.IsNullOrEmpty(Model.TicketInfo.NombreTecnico) && Model.TicketInfo.NombreTecnico != "Sin Asignar")
                            {
                                @Model.TicketInfo.NombreTecnico
                            }
                            else
                            {
                                <span class="badge bg-secondary">@unassignedText</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong><i class="fas fa-toggle-on text-primary"></i> @currentStatusText:</strong>
                        </div>
                        <div class="col-md-8">
                            @if (Model.TicketInfo.Estado == "Abierto" || Model.TicketInfo.Estado == "Nuevo")
                            {
                                <span class="badge bg-success"><i class="fas fa-check"></i> @Model.TicketInfo.Estado</span>
                            }
                            else if (Model.TicketInfo.Estado == "Asignado" || Model.TicketInfo.Estado == "En Proceso")
                            {
                                <span class="badge bg-warning text-dark"><i class="fas fa-spinner"></i> @Model.TicketInfo.Estado</span>
                            }
                            else if (Model.TicketInfo.Estado == "Cerrado" || Model.TicketInfo.Estado == "Resuelto")
                            {
                                <span class="badge bg-secondary"><i class="fas fa-times"></i> @Model.TicketInfo.Estado</span>
                            }
                            else
                            {
                                <span class="badge bg-info text-dark">@Model.TicketInfo.Estado</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Acciones Card (Moved to right column) -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">@actionsText</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Details" asp-route-id="@Model.TicketInfo.IdTicket" class="btn btn-primary btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-eye"></i>
                            </span>
                            <span class="text">@viewDetailsText</span>
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-arrow-left"></i>
                            </span>
                            <span class="text">@backToListText</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Historial de Cambios Card (New Full Width Row) -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">@changeHistoryText</h6>
                </div>
                <div class="card-body">
                    @if (Model.HistoryLog != null && Model.HistoryLog.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                                <thead class="thead-light">
                                    <tr>
                                        <th>@userActionText</th>
                                        <th>@eventDateText</th>
                                        <th>@statusText</th>
                                        <th>@observationText</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.HistoryLog)
                                    {
                                        <tr>
                                            <td>
                                                <i class="fas fa-user mr-2 text-gray-400"></i> @item.UsuarioAccion
                                            </td>
                                            <td>
                                                <i class="fas fa-clock mr-2 text-gray-400"></i> @item.FechaEvento.ToString("g")
                                            </td>
                                            <td>
                                                <span class="badge bg-info text-dark">@item.Estado</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Observacion))
                                                {
                                                    @item.Observacion
                                                }
                                                else
                                                {
                                                    <span class="text-muted font-italic">@noDataText</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="text-muted mb-0">
                                <i class="fas fa-info-circle mr-2"></i>
                                @noHistoryRecordsText
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .btn-icon-split {
            padding: 0;
            overflow: hidden;
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-align: stretch;
            -ms-flex-align: stretch;
            align-items: stretch;
            -webkit-box-pack: center;
            -ms-flex-pack: center;
            justify-content: center;
        }

        .btn-icon-split .icon {
            background: rgba(0, 0, 0, .15);
            display: inline-block;
            padding: .375rem .75rem;
        }

        .btn-icon-split .text {
            display: inline-block;
            padding: .375rem .75rem;
        }

        .timeline {
            position: relative;
        }
    </style>
}
