@using X.PagedList
@using X.PagedList.Mvc.Core
@using System.Globalization
@model IPagedList<HelpTrack.Application.DTOs.TicketDTO>

@{
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var isEs = lang == "es";

    var title = isEs ? "Gestión de Tickets" : "Ticket Management";
    var newTicketText = isEs ? "Nuevo Ticket" : "New Ticket";
    var searchFiltersText = isEs ? "Filtros de búsqueda" : "Search Filters";
    var searchPlaceholder = isEs ? "Buscar por título o descripción..." : "Search by title or description...";
    var searchButtonText = isEs ? "Buscar" : "Search";
    var ticketHistoryText = isEs ? "Historial de Tickets" : "Ticket History";
    var ticketLabel = isEs ? "Ticket" : "Ticket";
    var detailsTooltip = isEs ? "Ver detalles" : "Details";
    var editTooltip = isEs ? "Editar" : "Edit";
    var deleteTooltip = isEs ? "Eliminar" : "Delete";
    var deleteConfirm = isEs ? "¿Está seguro de que desea eliminar este ticket?" : "Are you sure you want to delete this ticket?";
    var noResultsText = isEs ? "No se encontraron resultados" : "No results found";
    var tryOtherTermsText = isEs ? "Intente con otros términos de búsqueda" : "Try different search terms";

    ViewData["Title"] = title;
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> @newTicketText
        </a>
    </div>

    <!-- Filtros -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@searchFiltersText</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="input-group mb-3">
                        <input type="text" id="searchInput" class="form-control" placeholder="@searchPlaceholder">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="button" id="searchButton">
                                <i class="fas fa-search"></i> @searchButtonText
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 text-right">
                    <a asp-action="History" class="btn btn-secondary">
                        <i class="fas fa-history"></i> @ticketHistoryText
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de Tickets -->
    <div class="row" id="ticketsContainer">
        @foreach (var item in Model)
        {
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    @ticketLabel #@item.IdTicket
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@item.Titulo</div>
                                @if (!string.IsNullOrEmpty(item.Descripcion))
                                {
                                    <div class="text-muted small mt-1">@item.Descripcion</div>
                                }
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-tags fa-2x text-gray-300"></i>
                            </div>
                        </div>
                        <div class="mt-3 d-flex justify-content-end">
                            <!-- Botón Ver Detalles -->
                            <a href="@Url.Action("Details", new { id = item.IdTicket })"
                               class="btn btn-sm btn-info mr-1"
                               data-toggle="tooltip"
                               title="@detailsTooltip">
                                <i class="fas fa-eye"></i>
                            </a>

                            <!-- Botón Editar -->
                            <a href="@Url.Action("Edit", new { id = item.IdTicket })"
                               class="btn btn-sm btn-primary mr-1"
                               data-toggle="tooltip"
                               title="@editTooltip"
                               data-placement="top">
                                <i class="fas fa-edit"></i>
                            </a>

                            <!-- Botón Eliminar -->
                            <form asp-action="Delete" asp-route-id="@item.IdTicket" method="post" style="display:inline;" onsubmit="return confirm('@deleteConfirm');">
                                @Html.AntiForgeryToken()
                                <button type="submit"
                                        class="btn btn-sm btn-danger"
                                        data-toggle="tooltip"
                                        title="@deleteTooltip"
                                        data-placement="top">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Mensaje cuando no hay resultados -->
    <div id="noResults" class="col-12 text-center py-4" style="display: none;">
        <i class="fas fa-search fa-3x mb-3 text-gray-400"></i>
        <h5 class="text-gray-500">@noResultsText</h5>
        <p class="text-muted">@tryOtherTermsText</p>
    </div>

    <!-- Paginación -->
    <div class="row">
        <div class="col-12">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
                     new PagedListRenderOptions
            {
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" }
            })
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Inicializar tooltips
            $('[data-toggle="tooltip"]').tooltip();

            // Búsqueda en tiempo real
            $('#searchButton').click(filterTickets);
            $('#searchInput').keyup(filterTickets);

            function filterTickets() {
                const searchTerm = $('#searchInput').val().trim().toLowerCase();
                const $cards = $('.card').parent(); // Selecciona el div padre que contiene la tarjeta
                let hasResults = false;

                if (searchTerm === '') {
                    $cards.show();
                    $('#noResults').hide();
                    return;
                }

                // Obtener todos los términos de búsqueda (separados por espacios)
                const searchTerms = searchTerm.split(' ').filter(term => term.length > 0);

                $cards.each(function () {
                    const $card = $(this);
                    const cardText = $card.find('.text-gray-800, .text-muted').text().toLowerCase();

                    // Verificar si TODOS los términos de búsqueda están presentes
                    const allTermsMatch = searchTerms.every(term =>
                        cardText.includes(term)
                    );

                    $card.toggle(allTermsMatch);

                    if (allTermsMatch) {
                        hasResults = true;
                    }
                });

                // Mostrar/ocultar mensaje de "no hay resultados"
                if (hasResults) {
                    $('#noResults').hide();
                } else {
                    $('#noResults').show();
                }
            }

            // Deshabilitar clic en botones inactivos
            $('.btn[style*="pointer-events: none"]').on('click', function (e) {
                e.preventDefault();
                return false;
            });
        });
    </script>
}