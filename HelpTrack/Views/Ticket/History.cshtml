@using System.Globalization
@model IEnumerable<HelpTrack.Application.DTOs.TicketHistoryDTO>

@{
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var isEs = lang == "es";

    var title = isEs ? "Historial de Tickets" : "Ticket History";
    var fullTicketListText = isEs ? "Listado Completo de Tickets" : "Full Ticket List";
    var creationDateText = isEs ? "Fecha de Creación" : "Creation Date";
    var assignmentDateText = isEs ? "Fecha de Asignación" : "Assignment Date";
    var technicianNameText = isEs ? "Técnico Asignado" : "Assigned Technician";
    var statusText = isEs ? "Estado" : "Status";
    var actionsText = isEs ? "Acciones" : "Actions";
    var pendingText = isEs ? "Pendiente" : "Pending";
    var unassignedText = isEs ? "Sin Asignar" : "Unassigned";
    var viewDetailsText = isEs ? "Ver Detalles" : "View Details";
    var ticketsBreadcrumb = isEs ? "Tickets" : "Tickets";

    ViewData["Title"] = title;
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@title</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">@ticketsBreadcrumb</a></li>
        <li class="breadcrumb-item active">@title</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            @fullTicketListText
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered" id="datatablesSimple">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.IdTicket)</th>
                        <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                        <th>@creationDateText</th>
                        <th>@assignmentDateText</th>
                        <th>@technicianNameText</th>
                        <th>@statusText</th>
                        <th>@actionsText</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.IdTicket)</td>
                            <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                            <td>@item.FechaCreacion.ToString("g")</td>
                            <td>
                                @if (item.FechaAsignacion.HasValue)
                                {
                                    @item.FechaAsignacion.Value.ToString("g")
                                }
                                else
                                {
                                    <span class="text-muted">@pendingText</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.NombreTecnico) && item.NombreTecnico != "Sin Asignar")
                                {
                                    @Html.DisplayFor(modelItem => item.NombreTecnico)
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@unassignedText</span>
                                }
                            </td>
                            <td>
                                @if (item.Estado == "Abierto" || item.Estado == "Nuevo")
                                {
                                    <span class="badge bg-success">@item.Estado</span>
                                }
                                else if (item.Estado == "Asignado" || item.Estado == "En Proceso")
                                {
                                    <span class="badge bg-warning text-dark">@item.Estado</span>
                                }
                                else if (item.Estado == "Cerrado" || item.Estado == "Resuelto")
                                {
                                    <span class="badge bg-secondary">@item.Estado</span>
                                }
                                else
                                {
                                    <span class="badge bg-info text-dark">@item.Estado</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.IdTicket" class="btn btn-sm btn-info" title="@viewDetailsText">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
