@model IEnumerable<HelpTrack.Application.DTOs.TicketHistoryDTO>

@{
    ViewData["Title"] = SharedLocalizer["TicketHistory"];
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@SharedLocalizer["TicketHistory"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">Tickets</a></li>
        <li class="breadcrumb-item active">@SharedLocalizer["TicketHistory"]</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            @SharedLocalizer["FullTicketList"]
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered" id="datatablesSimple">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.IdTicket)</th>
                        <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                        <th>@SharedLocalizer["CreationDate"]</th>
                        <th>@SharedLocalizer["AssignmentDate"]</th>
                        <th>@SharedLocalizer["TechnicianName"]</th>
                        <th>@SharedLocalizer["Status"]</th>
                        <th>@SharedLocalizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.IdTicket)</td>
                            <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                            <td>@item.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (item.FechaAsignacion.HasValue)
                                {
                                    @item.FechaAsignacion.Value.ToString("dd/MM/yyyy HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">@SharedLocalizer["Pending"]</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.NombreTecnico) && item.NombreTecnico != "Sin Asignar")
                                {
                                    @Html.DisplayFor(modelItem => item.NombreTecnico)
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@SharedLocalizer["Unassigned"]</span>
                                }
                            </td>
                            <td>
                                @if (item.Estado == "Abierto" || item.Estado == "Nuevo")
                                {
                                    <span class="badge bg-success">@item.Estado</span>
                                }
                                else if (item.Estado == "Asignado" || item.Estado == "En Proceso")
                                {
                                    <span class="badge bg-warning text-dark">@item.Estado</span>
                                }
                                else if (item.Estado == "Cerrado" || item.Estado == "Resuelto")
                                {
                                    <span class="badge bg-secondary">@item.Estado</span>
                                }
                                else
                                {
                                    <span class="badge bg-info text-dark">@item.Estado</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.IdTicket" class="btn btn-sm btn-info" title="@SharedLocalizer["ViewDetails"]">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
