@model HelpTrack.Application.DTOs.AsignacionTicketDTO

@{
    ViewData["Title"] = "Asignar Ticket";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Asignar Ticket</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">Tickets</a></li>
        <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.IdTicket">Detalles</a></li>
        <li class="breadcrumb-item active">Asignar</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user-plus me-1"></i>
            Asignar Ticket #@Model.IdTicket
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-12">
                    <h5>Ticket: @Model.Ticket?.Titulo</h5>
                    <p class="text-muted">@Model.Ticket?.Descripcion</p>
                </div>
            </div>

            <form asp-action="Assign">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdTicket" />
                <input type="hidden" asp-for="Metodo" value="Manual" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <select asp-for="IdTecnico" class="form-select" asp-items="Model.TecnicosDisponibles">
                                <option value="">-- Seleccione un TÃ©cnico --</option>
                            </select>
                            <label asp-for="IdTecnico"></label>
                            <span asp-validation-for="IdTecnico" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Prioridad" class="form-control" type="number" min="1" max="5" />
                            <label asp-for="Prioridad"></label>
                            <span asp-validation-for="Prioridad" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-floating mb-3">
                    <textarea asp-for="Justificacion" class="form-control" style="height: 100px"></textarea>
                    <label asp-for="Justificacion"></label>
                    <span asp-validation-for="Justificacion" class="text-danger"></span>
                </div>

                <div class="mt-4 mb-0">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Details" asp-route-id="@Model.IdTicket" class="btn btn-secondary me-md-2">Cancelar</a>
                        <button type="submit" class="btn btn-primary">Asignar Ticket</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
