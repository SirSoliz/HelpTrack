@using System.Globalization
@model HelpTrack.Application.DTOs.TicketDTO

@{
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var isEs = lang == "es";

    var title = isEs ? "Crear Ticket" : "Create Ticket";
    var titleLabel = isEs ? "Título" : "Title";
    var descriptionLabel = isEs ? "Descripción" : "Description";
    var priorityLabel = isEs ? "Prioridad" : "Priority";
    var selectPriorityText = isEs ? "Seleccione una prioridad" : "Select priority";
    var categoryLabel = isEs ? "Categoría" : "Category";
    var selectCategoryText = isEs ? "Seleccione una categoría" : "Select category";
    var addImagesText = isEs ? "Agregar imágenes" : "Add images";
    var cancelText = isEs ? "Cancelar" : "Cancel";
    var saveText = isEs ? "Guardar" : "Save";

    ViewData["Title"] = title;
}

<h1>@title</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Ticket" asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Titulo" class="control-label">@titleLabel</label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label">@descriptionLabel</label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPrioridad" class="control-label">@priorityLabel</label>
                <select asp-for="IdPrioridad" class="form-control" asp-items="ViewBag.Prioridades">
                    <option value="">@selectPriorityText</option>
                </select>
                <span asp-validation-for="IdPrioridad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCategoria" class="control-label">@categoryLabel</label>
                <select asp-for="IdCategoria" class="form-control" asp-items="ViewBag.Categorias">
                    <option value="">@selectCategoryText</option>
                </select>
                <span asp-validation-for="IdCategoria" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <label for="newImages">@addImagesText</label>
                <input type="file" id="newImages" name="NuevasImagenes" multiple class="form-control" accept="image/*" />
            </div>
            <div class="form-group mt-3">
                <a asp-action="Index" class="btn btn-secondary">@cancelText</a>
                <button type="submit" class="btn btn-primary">@saveText</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
