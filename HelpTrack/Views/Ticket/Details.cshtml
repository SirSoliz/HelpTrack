@model HelpTrack.Application.DTOs.TicketDTO

@{
    ViewData["Title"] = "Detalles de Ticket";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2>@Model.Titulo</h2>
        </div>
        <div class="card-body">
            <!-- Información Básica -->
            <div class="mb-4">
                <h4>Información General</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descripcion)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

                    <dt class="col-sm-3">Prioridad</dt>
                    <dd class="col-sm-9">
                        <select class="form-control" disabled>
                            @foreach (var item in ViewBag.Prioridades as List<SelectListItem>)
                            {
                                <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                            }
                        </select>
                    </dd>

                    <dt class="col-sm-3">Estado Actual</dt>
                    <dd class="col-sm-9">@Model.EstadoActual</dd>

                    <dt class="col-sm-3">Codigo de Usuario</dt>
                    <dd class="col-sm-9">@Model.IdUsuarioCreacion</dd>

                    <dt class="col-sm-3">Imagen</dt>
                    <dd class="col-sm-9">@Model.ImagenesTicket</dd>
                </dl>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.IdTicket" class="btn btn-primary">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
        </div>
    </div>
</div>

<style>
    .badge {
        font-size: 1em;
        padding: 0.5em 1em;
    }
</style>
