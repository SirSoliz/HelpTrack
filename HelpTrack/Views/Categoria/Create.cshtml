@model HelpTrack.Application.DTOs.CategoriaDTO

@{
    ViewData["Title"] = SharedLocalizer["CreateCategory"];
}

<h1>@SharedLocalizer["CreateCategory"]</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">@SharedLocalizer["CategoryName"]</label>
                <input asp-for="Nombre" class="form-control" placeholder="@SharedLocalizer["CategoryName"]" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label">@SharedLocalizer["DescriptionOptional"]</label>
                <input asp-for="Descripcion" class="form-control" placeholder="@SharedLocalizer["DescriptionOptional"]" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdSla" class="control-label">SLA</label>
                <select asp-for="IdSla" class="form-control" asp-items="ViewBag.SLAs">
                    <option value="">@SharedLocalizer["SelectSLA"]</option>
                </select>
                <span asp-validation-for="IdSla" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EtiquetasSeleccionadas" class="control-label">@SharedLocalizer["Tags"]</label>
                <select asp-for="EtiquetasSeleccionadas" class="form-control" multiple="multiple"
                        asp-items="ViewBag.Etiquetas"></select>
                <span asp-validation-for="EtiquetasSeleccionadas" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EspecialidadesSeleccionadas" class="control-label">@SharedLocalizer["Specialties"]</label>
                <select asp-for="EspecialidadesSeleccionadas" class="form-control" multiple="multiple"
                        asp-items="ViewBag.Especialidades"></select>
                <span asp-validation-for="EspecialidadesSeleccionadas" class="text-danger"></span>
            </div>
            

            <div class="form-group mt-3">
                <a asp-action="Index" class="btn btn-secondary">@SharedLocalizer["Cancel"]</a>
                <button type="submit" class="btn btn-primary">@SharedLocalizer["Save"]</button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}