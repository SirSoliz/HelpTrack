@model HelpTrack.Application.DTOs.CategoriaDTO

@{
    ViewData["Title"] = "Crear Categoría";
}

<h1>Crear Categoría</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Nombre de la categoría" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" placeholder="Descripción (opcional)" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdSla" class="control-label"></label>
                <input asp-for="IdSla" class="form-control" type="number" min="1" placeholder="ID de SLA" />
                <span asp-validation-for="IdSla" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TiempoMaxRespuestaHoras" class="control-label"></label>
                <input asp-for="TiempoMaxRespuestaHoras" class="form-control" type="number" min="0" placeholder="Horas máximas de respuesta" />
                <span asp-validation-for="TiempoMaxRespuestaHoras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TiempoMaxResolucionHoras" class="control-label"></label>
                <input asp-for="TiempoMaxResolucionHoras" class="form-control" type="number" min="0" placeholder="Horas máximas de resolución" />
                <span asp-validation-for="TiempoMaxResolucionHoras" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>


        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}