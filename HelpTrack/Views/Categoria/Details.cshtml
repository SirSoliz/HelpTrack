@using System.Globalization
@model HelpTrack.Application.DTOs.CategoriaDTO

@{
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var isEs = lang == "es";

    var title = isEs ? "Detalles de la categoría" : "Category details";
    var generalInfoTitle = isEs ? "Información general" : "General information";
    var maxResponseTimeLabel = isEs ? "Tiempo máximo de respuesta" : "Maximum response time";
    var maxResolutionTimeLabel = isEs ? "Tiempo máximo de resolución" : "Maximum resolution time";
    var hoursSuffix = isEs ? "horas" : "hours";
    var specialtiesTitle = isEs ? "Especialidades" : "Specialties";
    var noSpecialtiesText = isEs ? "No hay especialidades asociadas." : "There are no associated specialties.";
    var tagsTitle = isEs ? "Etiquetas" : "Tags";
    var noTagsText = isEs ? "No hay etiquetas asociadas." : "There are no associated tags.";
    var editText = isEs ? "Editar" : "Edit";
    var backToListText = isEs ? "Volver al listado" : "Back to list";

    ViewData["Title"] = title;
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2>@Model.Nombre</h2>
        </div>
        <div class="card-body">
            <!-- Información Básica -->
            <div class="mb-4">
                <h4>@generalInfoTitle</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descripcion)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

                    <dt class="col-sm-3">@maxResponseTimeLabel</dt>
                    <dd class="col-sm-9">@Model.TiempoMaxRespuestaHoras @hoursSuffix</dd>

                    <dt class="col-sm-3">@maxResolutionTimeLabel</dt>
                    <dd class="col-sm-9">@Model.TiempoMaxResolucionHoras @hoursSuffix</dd>
                </dl>
            </div>

            <!-- Especialidades -->
            <div class="mb-4">
                <h4>@specialtiesTitle</h4>
                <hr />
                @if (Model.Especialidades != null && Model.Especialidades.Any())
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var especialidad in Model.Especialidades)
                        {
                            <span class="badge bg-info text-dark p-2">@especialidad.Nombre</span>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">@noSpecialtiesText</div>
                }
            </div>

            <!-- Etiquetas -->
            <div class="mb-4">
                <h4>@tagsTitle</h4>
                <hr />
                @if (Model.Etiquetas != null && Model.Etiquetas.Any())
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var etiqueta in Model.Etiquetas)
                        {
                            <span class="badge bg-secondary p-2">@etiqueta.Nombre</span>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">@noTagsText</div>
                }
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.IdCategoria" class="btn btn-primary">@editText</a>
            <a asp-action="Index" class="btn btn-secondary">@backToListText</a>
        </div>
    </div>
</div>

<style>
    .badge {
        font-size: 1em;
        padding: 0.5em 1em;
    }
</style>