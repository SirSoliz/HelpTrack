@model HelpTrack.Application.DTOs.CategoriaDTO

@{
    ViewData["Title"] = "Detalles de Categoría";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2>@Model.Nombre</h2>
        </div>
        <div class="card-body">
            <!-- Información Básica -->
            <div class="mb-4">
                <h4>Información General</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descripcion)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

                    <dt class="col-sm-3">Tiempo máximo de respuesta</dt>
                    <dd class="col-sm-9">@Model.TiempoMaxRespuestaHoras horas</dd>

                    <dt class="col-sm-3">Tiempo máximo de resolución</dt>
                    <dd class="col-sm-9">@Model.TiempoMaxResolucionHoras horas</dd>
                </dl>
            </div>

            <!-- Especialidades -->
            <div class="mb-4">
                <h4>Especialidades</h4>
                <hr />
                @if (Model.Especialidades != null && Model.Especialidades.Any())
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var especialidad in Model.Especialidades)
                        {
                            <span class="badge bg-info text-dark p-2">@especialidad.Nombre</span>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">No hay especialidades asignadas a esta categoría.</div>
                }
            </div>

            <!-- Etiquetas -->
            <div class="mb-4">
                <h4>Etiquetas</h4>
                <hr />
                @if (Model.Etiquetas != null && Model.Etiquetas.Any())
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var etiqueta in Model.Etiquetas)
                        {
                            <span class="badge bg-secondary p-2">@etiqueta.Nombre</span>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">No hay etiquetas asignadas a esta categoría.</div>
                }
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.IdCategoria" class="btn btn-primary">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
        </div>
    </div>
</div>

<style>
    .badge {
        font-size: 1em;
        padding: 0.5em 1em;
    }
</style>