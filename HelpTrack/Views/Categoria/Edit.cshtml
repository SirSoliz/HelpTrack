@model HelpTrack.Application.DTOs.CategoriaDTO

@{
    ViewData["Title"] = "Editar Categoría";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2>Editar Categoría: @Model.Nombre</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdCategoria" />

                <!-- Información Básica -->
                <div class="mb-4">
                    <h4>Información General</h4>
                    <hr />
                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="control-label fw-bold"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Descripcion" class="control-label fw-bold"></label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="TiempoMaxRespuestaHoras" class="control-label fw-bold">Tiempo máximo de respuesta</label>
                                <input asp-for="TiempoMaxRespuestaHoras" class="form-control" type="number" min="1" />
                                <span asp-validation-for="TiempoMaxRespuestaHoras" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="TiempoMaxResolucionHoras" class="control-label fw-bold">Tiempo máximo de resolución </label>
                                <input asp-for="TiempoMaxResolucionHoras" class="form-control" type="number" min="1" />
                                <span asp-validation-for="TiempoMaxResolucionHoras" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Especialidades -->
                <div class="mb-4">
                    <h4>Especialidades</h4>
                    <hr />
                    @if (Model.Especialidades != null && Model.Especialidades.Any())
                    {
                        <div class="d-flex flex-wrap gap-2 mb-3">
                            @foreach (var especialidad in Model.Especialidades)
                            {
                                <span class="badge bg-info text-dark p-2">@especialidad.Nombre</span>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-3">No hay especialidades asignadas a esta categoría.</div>
                    }
                    <a href="#" class="btn btn-outline-primary btn-sm">Gestionar especialidades</a>
                </div>

                <!-- Etiquetas -->
                <div class="mb-4">
                    <h4>Etiquetas</h4>
                    <hr />
                    @if (Model.Etiquetas != null && Model.Etiquetas.Any())
                    {
                        <div class="d-flex flex-wrap gap-2 mb-3">
                            @foreach (var etiqueta in Model.Etiquetas)
                            {
                                <span class="badge bg-secondary p-2">@etiqueta.Nombre</span>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-3">No hay etiquetas asignadas a esta categoría.</div>
                    }
                    <a href="#" class="btn btn-outline-secondary btn-sm">Gestionar etiquetas</a>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Guardar cambios
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.IdCategoria" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .badge {
        font-size: 1em;
        padding: 0.5em 1em;
    }

    .form-control {
        max-width: 500px;
    }

    textarea.form-control {
        max-width: 100%;
    }
</style>