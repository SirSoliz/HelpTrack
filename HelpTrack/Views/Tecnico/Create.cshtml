@using System.Globalization
@model HelpTrack.Application.DTOs.TecnicoDTO

@{
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var isEs = lang == "es";

    var title = isEs ? "Crear Técnico" : "Create Technician";
    var userInfoText = isEs ? "Información del Usuario" : "User Information";
    var fullNameText = isEs ? "Nombre Completo" : "Full Name";
    var emailText = isEs ? "Correo Electrónico" : "Email";
    var technicianInfoText = isEs ? "Información del Técnico" : "Technician Information";
    var aliasText = isEs ? "Alias" : "Alias";
    var workloadLevelText = isEs ? "Nivel de Carga de Trabajo" : "Workload Level";
    var readOnlyFieldText = isEs ? "Campo de solo lectura" : "Read-only field";
    var availableText = isEs ? "Disponible" : "Available";
    var specialtiesText = isEs ? "Especialidades" : "Specialties";
    var cancelText = isEs ? "Cancelar" : "Cancel";
    var saveText = isEs ? "Guardar" : "Save";
    var requiredFieldText = isEs ? " *" : " *";

    ViewData["Title"] = title;
}

<h2>@title</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h4>@userInfoText</h4>
            <div class="form-group">
                <label asp-for="Usuario.Nombre" class="control-label">@fullNameText@requiredFieldText</label>
                <input asp-for="Usuario.Nombre" class="form-control" required />
                <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Usuario.Email" class="control-label">@emailText@requiredFieldText</label>
                <input asp-for="Usuario.Email" type="email" class="form-control" required />
                <span asp-validation-for="Usuario.Email" class="text-danger"></span>
            </div>

            <h4>@technicianInfoText</h4>
            <div class="form-group">
                <label asp-for="Alias" class="control-label">@aliasText</label>
                <input asp-for="Alias" class="form-control" />
                <span asp-validation-for="Alias" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NivelCarga" class="control-label">@workloadLevelText</label>
                <input asp-for="NivelCarga" class="form-control" value="0" readonly />
                <small class="form-text text-muted">@readOnlyFieldText</small>
                <span asp-validation-for="NivelCarga" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Disponible" /> @availableText
                </label>
            </div>

            <div class="form-group">
                <label class="control-label">@specialtiesText</label>
                <div class="row">
                    @foreach (var especialidad in ViewBag.Especialidades)
                    {
                        <div class="col-md-4">
                            <div class="form-check">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="EspecialidadesSeleccionadas"
                                       value="@especialidad.IdEspecialidad"
                                       id="especialidad_@especialidad.IdEspecialidad" />
                                <label class="form-check-label" for="especialidad_@especialidad.IdEspecialidad">
                                    @especialidad.Nombre
                                </label>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group mt-3">
                <a asp-action="Index" class="btn btn-secondary">@cancelText</a>
                <button type="submit" class="btn btn-primary">@saveText</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}