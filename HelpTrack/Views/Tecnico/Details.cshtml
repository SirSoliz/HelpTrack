@using System.Globalization
@model HelpTrack.Application.DTOs.TecnicoDTO

@{
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var isEs = lang == "es";

    // Títulos y encabezados
    var title = isEs ? "Detalles del Técnico" : "Technician Details";
    var personalInfoText = isEs ? "Información Personal" : "Personal Information";
    var technicianIdText = isEs ? "ID de Técnico" : "Technician ID";
    var aliasText = isEs ? "Alias" : "Alias";
    var fullNameText = isEs ? "Nombre Completo" : "Full Name";
    var emailText = isEs ? "Correo Electrónico" : "Email";
    var statusText = isEs ? "Estado" : "Status";
    var workloadLevelText = isEs ? "Nivel de Carga" : "Workload Level";
    var availableText = isEs ? "Disponible" : "Available";
    var notAvailableText = isEs ? "No Disponible" : "Not Available";
    var specialtiesText = isEs ? "Especialidades" : "Specialties";
    var noSpecialtiesAssignedText = isEs ? "No se han asignado especialidades a este técnico" : "No specialties assigned to this technician";
    var editText = isEs ? "Editar" : "Edit";
    var backToListText = isEs ? "Volver al Listado" : "Back to List";
    var workloadLowText = isEs ? "Baja Carga" : "Low Workload";
    var workloadMediumText = isEs ? "Carga Media" : "Medium Workload";
    var workloadHighText = isEs ? "Alta Carga" : "High Workload";
    var ticketsText = isEs ? "tickets" : "tickets";

    ViewData["Title"] = title;
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">@Model.Alias</h2>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h4>@personalInfoText</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">@technicianIdText:</dt>
                        <dd class="col-sm-8">@Model.IdTecnico</dd>

                        <dt class="col-sm-4">@aliasText:</dt>
                        <dd class="col-sm-8">@Model.Alias</dd>

                        @if (Model.Usuario != null)
                        {
                            <div class="form-group">
                                <dt class="col-sm-4">@fullNameText:</dt>
                                <dd class="col-sm-8">@Model.Usuario.Nombre</dd>
                            </div>
                            <div class="form-group">
                                <dt class="col-sm-4">@emailText:</dt>
                                <dd class="col-sm-8">@Model.Usuario.Email</dd>
                            </div>
                        }
                    </dl>
                </div>
                <div class="col-md-6">
                    <h4>@statusText y @workloadLevelText</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-5">@statusText:</dt>
                        <dd class="col-sm-7">
                            @if (Model.Disponible)
                            {
                                <span class="badge bg-success">@availableText</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">@notAvailableText</span>
                            }
                        </dd>

                        <dt class="col-sm-5">@workloadLevelText:</dt>
                        <dd class="col-sm-7">
                            <div class="progress" style="height: 25px;">
                                @{
                                    // Maximum workload capacity (can be adjusted)
                                    int maxCapacity = 10;
                                    int cargaWidth = Math.Min((int)((Model.NivelCarga / (double)maxCapacity) * 100), 100);
                                    string progressBarClass = Model.NivelCarga switch
                                    {
                                        <= 3 => "bg-success",
                                        <= 7 => "bg-warning",
                                        _ => "bg-danger"
                                    };
                                }
                                <div class="progress-bar @progressBarClass" role="progressbar"
                                     style="width: @(cargaWidth)%; color: #000000; font-weight: bold;"
                                     aria-valuenow="@Model.NivelCarga"
                                     aria-valuemin="0"
                                     aria-valuemax="@maxCapacity">
                                    @Model.NivelCarga/@maxCapacity
                                </div>
                            </div>
                            <small class="text-muted">@GetCargaTrabajoText(Model.NivelCarga, isEs) (@Model.NivelCarga @ticketsText)</small>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <h4>@specialtiesText</h4>
                    <hr />
                    @if (Model.Especialidades != null && Model.Especialidades.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var especialidad in Model.Especialidades)
                            {
                                <span class="badge bg-info text-dark p-2">@especialidad.Nombre</span>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning" role="alert">
                            @noSpecialtiesAssignedText
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.IdTecnico" class="btn btn-primary">@editText</a>
            <a asp-action="Index" class="btn btn-secondary">@backToListText</a>
        </div>
    </div>
</div>

@functions {
    private string GetCargaTrabajoText(byte nivelCarga, bool isEs)
    {
        return nivelCarga switch
        {
            <= 3 => isEs ? "Baja Carga" : "Low Workload",
            <= 7 => isEs ? "Carga Media" : "Medium Workload",
            _ => isEs ? "Alta Carga" : "High Workload"
        };
    }

    private string GetCargaTrabajoClass(byte nivelCarga)
    {
        return nivelCarga switch
        {
            <= 3 => "bg-success",
            <= 7 => "bg-warning",
            _ => "bg-danger"
        };
    }
}

@section Styles {
    <style>
        .progress {
            background-color: #e9ecef;
            border-radius: 4px;
        }
        .progress-bar {
            transition: width 0.6s ease;
        }
    </style>
}