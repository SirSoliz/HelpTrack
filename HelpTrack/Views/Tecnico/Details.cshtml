@model HelpTrack.Application.DTOs.TecnicoDTO

@{
    ViewData["Title"] = SharedLocalizer["TechnicianDetails"];
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">@Model.Alias</h2>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h4>@SharedLocalizer["PersonalInfo"]</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">@SharedLocalizer["TechnicianID"]:</dt>
                        <dd class="col-sm-8">@Model.IdTecnico</dd>

                        <dt class="col-sm-4">@SharedLocalizer["Alias"]:</dt>
                        <dd class="col-sm-8">@Model.Alias</dd>

                       
                        @if (Model.Usuario != null)
                        {
                            <div class="form-group">
                                <dt class="col-sm-4">@SharedLocalizer["FullName"]:</dt>
                                <dd class="col-sm-8">@Model.Usuario.Nombre</dd>
                              
                            </div>
                            <div class="form-group">
                                <dt class="col-sm-4">@SharedLocalizer["Email"]:</dt>
                                <dd class="col-sm-8">@Model.Usuario.Email</dd>

                            </div>
                        }
                        
                    </dl>
                </div>
                <div class="col-md-6">
                    <h4>@SharedLocalizer["Status"] y @SharedLocalizer["WorkloadLevel"]</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-5">@SharedLocalizer["Status"]:</dt>
                        <dd class="col-sm-7">
                            @if (Model.Disponible)
                            {
                                <span class="badge bg-success">@SharedLocalizer["Available"]</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">@SharedLocalizer["NotAvailable"]</span>
                            }
                        </dd>

                        <dt class="col-sm-5">@SharedLocalizer["WorkloadLevel"]:</dt>
                        <dd class="col-sm-7">
                            <div class="progress" style="height: 25px;">
                                @{
                                    // Maximum workload capacity (can be adjusted)
                                    int maxCapacity = 10;
                                    int cargaWidth = Math.Min((int)((Model.NivelCarga / (double)maxCapacity) * 100), 100);
                                    string progressBarClass = Model.NivelCarga switch
                                    {
                                        <= 3 => "bg-success",
                                        <= 7 => "bg-warning",
                                        _ => "bg-danger"
                                    };
                                }
                                <div class="progress-bar @progressBarClass" role="progressbar"
                                     style="width: @(cargaWidth)%; color: #000000; font-weight: bold;"
                                     aria-valuenow="@Model.NivelCarga"
                                     aria-valuemin="0"
                                     aria-valuemax="@maxCapacity">
                                    @Model.NivelCarga/@maxCapacity
                                </div>
                            </div>
                            <small class="text-muted">@GetCargaTrabajoText(Model.NivelCarga) (@Model.NivelCarga de @maxCapacity tickets)</small>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <h4>@SharedLocalizer["Specialties"]</h4>
                    <hr />
                    @if (Model.Especialidades != null && Model.Especialidades.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var especialidad in Model.Especialidades)
                            {
                                <span class="badge bg-info text-dark p-2">@especialidad.Nombre</span>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning" role="alert">
                            @SharedLocalizer["NoSpecialtiesAssigned"]
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.IdTecnico" class="btn btn-primary">@SharedLocalizer["Edit"]</a>
            <a asp-action="Index" class="btn btn-secondary">@SharedLocalizer["BackToList"]</a>
        </div>
    </div>
</div>

@functions {
    private string GetCargaTrabajoText(byte nivelCarga)
    {
        return nivelCarga switch
        {
            <= 3 => SharedLocalizer["WorkloadLow"],
            <= 7 => SharedLocalizer["WorkloadMedium"],
            _ => SharedLocalizer["WorkloadHigh"]
        };
    }
}

@section Styles {
    <style>
        .progress {
            background-color: #e9ecef;
            border-radius: 4px;
        }
        .progress-bar {
            transition: width 0.6s ease;
        }
    </style>
}