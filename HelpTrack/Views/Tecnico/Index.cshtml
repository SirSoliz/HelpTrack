@using X.PagedList
@using X.PagedList.Mvc.Core
@model IEnumerable<HelpTrack.Application.DTOs.TecnicoDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Tecnicos</h1>

<p>
    <a asp-action="Create">Nuevo Tecnico</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdTecnico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alias)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdTecnico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alias)
            </td>
                <td>
                    <a href="@Url.Action("Details", new { id = item.IdTecnico })" class="btn btn-info">
                        <i class="bg-info bi-search"></i>
                    </a>
                    <a href="@Url.Action("Edit", new { id = item.IdTecnico })" class="btn btn-primary">
                        <i class="bg-primary bi-pencil-fill"></i>
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
