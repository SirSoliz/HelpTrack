@using X.PagedList
@using X.PagedList.Mvc.Core
@using System.Globalization
@model IPagedList<HelpTrack.Application.DTOs.TecnicoDTO>

@{
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var isEs = lang == "es";

    var title = isEs ? "Gestión de Técnicos" : "Technician Management";
    var newTechnicianText = isEs ? "Nuevo Técnico" : "New Technician";
    var searchFiltersText = isEs ? "Filtros de Búsqueda" : "Search Filters";
    var searchPlaceholder = isEs ? "Buscar por alias o nombre..." : "Search by alias or name...";
    var searchButtonText = isEs ? "Buscar" : "Search";
    var clearText = isEs ? "Limpiar" : "Clear";
    var technicianText = isEs ? "Técnico" : "Technician";
    var levelText = isEs ? "Nivel" : "Level";
    var detailsText = isEs ? "Detalles" : "Details";
    var editText = isEs ? "Editar" : "Edit";
    var deleteText = isEs ? "Eliminar" : "Delete";
    var confirmDeleteText = isEs ? "¿Está seguro de que desea eliminar este técnico?" : "Are you sure you want to delete this technician?";

    ViewData["Title"] = title;
    var currentFilter = ViewData["CurrentFilter"] as string;
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@title</h1>
        <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> @newTechnicianText
        </a>
    </div>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- Filtros -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@searchFiltersText</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Index" method="get" class="form-inline">
                        <div class="input-group w-100">
                            <input type="text"
                                   name="searchString"
                                   class="form-control"
                                   placeholder="@searchPlaceholder"
                                   value="@currentFilter" />
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search"></i> @searchButtonText
                                </button>
                                @if (!string.IsNullOrEmpty(currentFilter))
                                {
                                    <a asp-action="Index" class="btn btn-secondary btn-clear-search">
                                        <i class="fas fa-times"></i> @clearText
                                    </a>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de Técnicos -->
    <div class="row" id="tecnicosContainer">
        @foreach (var item in Model)
        {
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    @technicianText #@item.IdTecnico
                                </div>
                                <div class="h5 mb-1 font-weight-bold text-gray-800">@item.Alias</div>
                                @if (item.Usuario != null && !string.IsNullOrEmpty(item.Usuario.Nombre))
                                {
                                    <div class="text-muted small mb-2">@item.Usuario.Nombre</div>
                                }
                                <div class="mt-2">

                                    <span class="badge badge-info ml-1">
                                        <i class="fas fa-tasks mr-1"></i> @levelText: @item.NivelCarga
                                    </span>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-user-tie fa-2x text-gray-300"></i>
                            </div>
                        </div>
                        <div class="mt-3 d-flex justify-content-end">
                            <!-- Botón Ver Detalles -->
                            <a href="@Url.Action("Details", new { id = item.IdTecnico })"
                               class="btn btn-sm btn-info mr-2"
                               title="@detailsText"
                               data-toggle="tooltip"
                               data-placement="top">
                                <i class="fas fa-eye"></i> @detailsText
                            </a>

                            <!-- Botón Editar -->
                            <a href="@Url.Action("Edit", new { id = item.IdTecnico })"
                               class="btn btn-sm btn-primary mr-2"
                               title="@editText"
                               data-toggle="tooltip"
                               data-placement="top">
                                <i class="fas fa-edit"></i> @editText
                            </a>

                            <!-- Botón Eliminar -->
                            <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('@confirmDeleteText');">
                                <input type="hidden" name="id" value="@item.IdTecnico" />
                                <button type="submit"
                                        class="btn btn-sm btn-danger"
                                        title="@deleteText"
                                        data-toggle="tooltip"
                                        data-placement="top">
                                    <i class="fas fa-trash"></i> @deleteText
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Paginación -->
    <div class="row">
        <div class="col-12">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = currentFilter }),
            new PagedListRenderOptions
            {
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" }
            })
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Variable para manejar el timeout de la búsqueda
            let searchTimeout;

            // Función para realizar la búsqueda
            function performSearch(searchTerm) {
                if (searchTerm.length > 0) {
                    // Construir la URL con el término de búsqueda
                    const url = new URL(window.location.href);
                    url.searchParams.set('searchString', searchTerm);
                    url.searchParams.delete('page'); // Resetear a la primera página

                    // Navegar a la nueva URL
                    window.location.href = url.toString();
                } else if (searchTerm.length === 0 && '@(!string.IsNullOrEmpty(currentFilter))' === 'True') {
                    // Si se borra el texto y había un filtro activo, limpiar la búsqueda
                    window.location.href = '@Url.Action("Index")';
                }
            }

            // Manejador de evento para el input de búsqueda
            $('input[name="searchString"]').on('input', function() {
                const searchTerm = $(this).val();

                // Limpiar el timeout anterior si existe
                clearTimeout(searchTimeout);

                // Configurar un nuevo timeout para realizar la búsqueda después de 500ms sin escribir
                searchTimeout = setTimeout(function() {
                    performSearch(searchTerm);
                }, 500);
            });

            // Manejar la tecla Enter para búsqueda inmediata
            $('input[name="searchString"]').on('keypress', function(e) {
                if (e.which === 13) { // Código de tecla Enter
                    e.preventDefault();
                    clearTimeout(searchTimeout);
                    performSearch($(this).val());
                }
            });

            // Manejar el botón de limpiar
            $('.btn-clear-search').on('click', function(e) {
                e.preventDefault();
                $('input[name="searchString"]').val('');
                window.location.href = '@Url.Action("Index")';
            });
        });
    </script>
}