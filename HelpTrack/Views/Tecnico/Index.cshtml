@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<HelpTrack.Application.DTOs.TecnicoDTO>

@{
    ViewData["Title"] = "Gestión de Técnicos";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Gestión de Técnicos</h1>
        <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Nuevo Técnico
        </a>
    </div>

    <!-- Filtros -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Filtros de Búsqueda</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="input-group mb-3">
                        <input type="text" id="searchInput" class="form-control" placeholder="Buscar técnico...">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="button" id="searchButton">
                                <i class="fas fa-search"></i> Buscar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de Técnicos -->
    <div class="row" id="tecnicosContainer">
        @foreach (var item in Model)
        {
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Técnico #@item.IdTecnico
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@item.Alias</div>
                                <div class="mt-2">
                                    <span class="badge badge-success">Disponible</span>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-user-tie fa-2x text-gray-300"></i>
                            </div>
                        </div>
                        <div class="mt-3 d-flex justify-content-end">
                            <!-- Botón Ver Detalles -->
                            <a href="@Url.Action("Details", new { id = item.IdTecnico })"
                               class="btn btn-sm btn-outline-info mr-2"
                               title="Ver detalles"
                               data-toggle="tooltip"
                               data-placement="top">
                                <i class="fas fa-eye"></i> Detalles
                            </a>

                            <!-- Botón Editar -->
                            <a href="@Url.Action("Edit", new { id = item.IdTecnico })"
                               class="btn btn-sm btn-outline-primary mr-2"
                               title="Editar"
                               data-toggle="tooltip"
                               data-placement="top">
                                <i class="fas fa-edit"></i> Editar
                            </a>

                            <!-- Botón Eliminar -->
                            <button type="button"
                                    class="btn btn-sm btn-outline-danger"
                                    title="Eliminar"
                                    data-toggle="tooltip"
                                    data-placement="top"
                                    onclick="confirmDelete(@item.IdTecnico, '@item.Alias')">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Paginación -->
    <div class="row">
        <div class="col-12">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
            new PagedListRenderOptions
            {
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" }
            })
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Inicializar tooltips
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });

        // Función para confirmar eliminación
        function confirmDelete(id, nombre) {
            Swal.fire({
                title: '¿Estás seguro?',
                text: `¿Deseas eliminar al técnico ${nombre}?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Aquí iría la llamada AJAX para eliminar el técnico
                    // Por ahora solo mostramos un mensaje de éxito
                    Swal.fire(
                        '¡Eliminado!',
                        'El técnico ha sido eliminado.',
                        'success'
                    );
                }
            });
        }

        // Búsqueda en tiempo real
        $(document).ready(function() {
            $('#searchButton').click(function() {
                const searchTerm = $('#searchInput').val().toLowerCase();
                $('.card').each(function() {
                    const cardText = $(this).text().toLowerCase();
                    $(this).toggle(cardText.includes(searchTerm));
                });
            });

            $('#searchInput').keyup(function() {
                const searchTerm = $(this).val().toLowerCase();
                $('.card').each(function() {
                    const cardText = $(this).text().toLowerCase();
                    $(this).toggle(cardText.includes(searchTerm));
                });
            });
        });
    </script>
}