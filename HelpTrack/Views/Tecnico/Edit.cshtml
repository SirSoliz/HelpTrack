@model HelpTrack.Application.DTOs.TecnicoDTO

@{
    ViewData["Title"] = "Editar Técnico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-user-edit me-2"></i>Editar Técnico</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="IdTecnico" />

                <div class="row">
                    <!-- Información del Técnico -->
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Información del Técnico</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group mb-3">
                                    <label asp-for="Alias" class="form-label fw-bold">Alias *</label>
                                    <input asp-for="Alias" class="form-control" required />
                                    <span asp-validation-for="Alias" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="NivelCarga" class="form-label fw-bold">Nivel de Carga (0-10) *</label>
                                    <input type="number" asp-for="NivelCarga" class="form-control" min="0" max="10" required />
                                    <span asp-validation-for="NivelCarga" class="text-danger"></span>
                                </div>

                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" asp-for="Disponible" id="disponibleSwitch">
                                    <label class="form-check-label fw-bold" for="disponibleSwitch">Disponible</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información del Usuario -->
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Datos del Usuario</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Usuario.Nombre" class="form-label fw-bold">Nombres *</label>
                                        <input asp-for="Usuario.Nombre" class="form-control" required />
                                        <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
                                    </div>
                                   
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Usuario.Email" class="form-label fw-bold">Correo Electrónico *</label>
                                    <input type="email" asp-for="Usuario.Email" class="form-control" required />
                                    <span asp-validation-for="Usuario.Email" class="text-danger"></span>
                                </div>

                            
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Especialidades -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Especialidades *</h5>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.Especialidades != null)
                        {
                            <div class="row">
                                @foreach (var especialidad in ViewBag.Especialidades)
                                {
                                    <div class="col-md-3 mb-2">
                                        <div class="form-check">
                                            <input class="form-check-input"
                                                   type="checkbox"
                                                   name="EspecialidadesSeleccionadas"
                                                   value="@especialidad.IdEspecialidad"
                                                   id="especialidad_@especialidad.IdEspecialidad"
                                                   @(Model.Especialidades?.Any(e => e.IdEspecialidad == especialidad.IdEspecialidad) == true ? "checked" : "")>
                                            <label class="form-check-label" for="especialidad_@especialidad.IdEspecialidad">
                                                @especialidad.Nombre
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                            <span class="text-danger field-validation-valid" data-valmsg-for="EspecialidadesSeleccionadas" data-valmsg-replace="true"></span>
                        }
                        else
                        {
                            <div class="alert alert-warning">No hay especialidades disponibles.</div>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Volver al listado
                    </a>
                    <div>
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-save me-1"></i> Guardar cambios
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.IdTecnico" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i> Cancelar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Validación del lado del cliente
        (function () {
            'use strict'

            // Seleccionar todos los formularios con la clase 'needs-validation'
            var forms = document.querySelectorAll('.needs-validation');

            // Validar cada campo al perder el foco
            var inputs = document.querySelectorAll('.form-control');
            inputs.forEach(function(input) {
                input.addEventListener('blur', function() {
                    this.classList.add('touched');
                    validateField(this);
                });
            });

            // Validar todo el formulario al enviar
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()

                            // Marcar todos los campos como tocados para mostrar errores
                            var inputs = form.querySelectorAll('.form-control');
                            inputs.forEach(function(input) {
                                input.classList.add('touched');
                                validateField(input);
                            });
                        }

                        form.classList.add('was-validated')
                    }, false)
                });

            // Función para validar un campo individual
            function validateField(input) {
                if (input.classList.contains('touched')) {
                    if (input.checkValidity()) {
                        input.classList.remove('is-invalid');
                        input.classList.add('is-valid');
                    } else {
                        input.classList.remove('is-valid');
                        input.classList.add('is-invalid');
                    }
                }
            }
        })();
    </script>
}