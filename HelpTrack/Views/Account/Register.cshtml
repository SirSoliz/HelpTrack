@model HelpTrack.Models.RegisterViewModel
@{
    ViewData["Title"] = "Registrarse";
}

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-lg-5 d-none d-lg-block bg-register-image" style="background: url('https://source.unsplash.com/Mv9hjnEUHR4/600x800'); background-position: center; background-size: cover;"></div>
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">¡Crea una cuenta!</h1>
                    </div>
                    <form asp-action="Register" method="post" class="user">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <input asp-for="Nombre" class="form-control form-control-user" placeholder="Nombre Completo" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input asp-for="Email" class="form-control form-control-user" placeholder="Correo Electrónico" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group row mb-3">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input asp-for="Password" class="form-control form-control-user" placeholder="Contraseña" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="ConfirmPassword" class="form-control form-control-user" placeholder="Repetir Contraseña" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block w-100">
                            Registrar Cuenta
                        </button>
                    </form>
                    <hr>
                    <div class="text-center">
                        <a class="small" asp-action="Login">¿Ya tienes una cuenta? ¡Inicia Sesión!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
