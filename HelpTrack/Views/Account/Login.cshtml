@model HelpTrack.Models.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="row justify-content-center">
    <div class="col-xl-5 col-lg-6 col-md-8">
        <div class="card o-hidden border-0 shadow-lg my-5 rounded-3">
            <div class="card-body p-0">

                        <div class="p-4">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">¡Bienvenido de nuevo!</h1>
                            </div>



                            <form asp-action="Login" method="post" class="user">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group mb-3">
                                    <input asp-for="Email" class="form-control form-control-user" placeholder="Ingrese su correo electrónico..." />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <input asp-for="Password" class="form-control form-control-user" placeholder="Contraseña" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block w-100">
                                    Iniciar Sesión
                                </button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" asp-action="ResetPassword">¿Olvidaste tu contraseña?</a>
                            </div>
                            <hr>
                            <div class="text-center">
                                <a class="small" asp-action="Register">¿No tienes una cuenta? ¡Regístrate!</a>
                            </div>
                        </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
