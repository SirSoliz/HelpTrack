@using X.PagedList
@using X.PagedList.Mvc.Core
@using System.Globalization
@model IPagedList<HelpTrack.Application.DTOs.UsuarioDTO>

@{
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var isEs = lang == "es";

    var title = isEs ? "Gestión de Usuarios" : "User Management";
    var newUserText = isEs ? "Nuevo Usuario" : "New User";
    var searchFiltersText = isEs ? "Filtros de Búsqueda" : "Search Filters";
    var searchPlaceholder = isEs ? "Buscar por nombre o email..." : "Search by name or email...";
    var searchButtonText = isEs ? "Buscar" : "Search";
    var clearText = isEs ? "Limpiar" : "Clear";
    var userText = isEs ? "Usuario" : "User";
    var emailText = isEs ? "Correo" : "Email";
    var activeText = isEs ? "Activo" : "Active";
    var detailsText = isEs ? "Detalles" : "Details";
    var editText = isEs ? "Editar" : "Edit";
    var deleteText = isEs ? "Eliminar" : "Delete";
    var confirmDeleteText = isEs ? "¿Está seguro de que desea eliminar este usuario?" : "Are you sure you want to delete this user?";

    ViewData["Title"] = title;
    var currentFilter = ViewData["CurrentFilter"] as string;
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@title</h1>
        <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> @newUserText
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- Filtros -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@searchFiltersText</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Index" method="get" class="form-inline">
                        <div class="input-group w-100">
                            <input type="text" name="searchString" class="form-control" placeholder="@searchPlaceholder" value="@currentFilter" />
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search"></i> @searchButtonText
                                </button>
                                @if (!string.IsNullOrEmpty(currentFilter))
                                {
                                    <a asp-action="Index" class="btn btn-secondary btn-clear-search">
                                        <i class="fas fa-times"></i> @clearText
                                    </a>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de Usuarios -->
    <div class="row" id="usuariosContainer">
        @foreach (var item in Model)
        {
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    @userText #@item.IdUsuario
                                </div>
                                <div class="h5 mb-1 font-weight-bold text-gray-800">@item.Nombre</div>
                                <div class="text-muted small mb-2">@item.Email</div>
                                <span class="badge @(item.Activo ? "badge-success" : "badge-danger")">@(item.Activo ? activeText : "Inactive")</span>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-user fa-2x text-gray-300"></i>
                            </div>
                        </div>
                        <div class="mt-3 d-flex justify-content-end">
                            <a href="@Url.Action("Details", new { id = item.IdUsuario })" class="btn btn-sm btn-info mr-2" title="@detailsText" data-toggle="tooltip" data-placement="top">
                                <i class="fas fa-eye"></i> @detailsText
                            </a>
                            <a href="@Url.Action("Edit", new { id = item.IdUsuario })" class="btn btn-sm btn-primary mr-2" title="@editText" data-toggle="tooltip" data-placement="top">
                                <i class="fas fa-edit"></i> @editText
                            </a>
                            <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('@confirmDeleteText');">
                                <input type="hidden" name="id" value="@item.IdUsuario" />
                                <button type="submit" class="btn btn-sm btn-danger" title="@deleteText" data-toggle="tooltip" data-placement="top">
                                    <i class="fas fa-trash"></i> @deleteText
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Paginación -->
    <div class="row">
        <div class="col-12">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = currentFilter }), new PagedListRenderOptions {
                LiElementClasses = new[] { "page-item" },
                PageClasses = new[] { "page-link" }
            })
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            let searchTimeout;
            function performSearch(searchTerm) {
                if (searchTerm.length > 0) {
                    const url = new URL(window.location.href);
                    url.searchParams.set('searchString', searchTerm);
                    url.searchParams.delete('page');
                    window.location.href = url.toString();
                } else if (searchTerm.length === 0 && '@(!string.IsNullOrEmpty(currentFilter))' === 'True') {
                    window.location.href = '@Url.Action("Index")';
                }
            }
            $('input[name="searchString"]').on('input', function () {
                const searchTerm = $(this).val();
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(function () { performSearch(searchTerm); }, 500);
            });
            $('input[name="searchString"]').on('keypress', function (e) {
                if (e.which === 13) {
                    e.preventDefault();
                    clearTimeout(searchTimeout);
                    performSearch($(this).val());
                }
            });
            $('.btn-clear-search').on('click', function (e) {
                e.preventDefault();
                $('input[name="searchString"]').val('');
                window.location.href = '@Url.Action("Index")';
            });
        });
    </script>
}
